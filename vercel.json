{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/auth/(.*)", "destination": "/api/index?endpoint=auth/$1" },
    { "source": "/api/contracts/(.*)", "destination": "/api/contracts?endpoint=$1" },
    { "source": "/api/users/(.*)", "destination": "/api/users?endpoint=$1" },
    { "source": "/api/(.*)", "destination": "/api/index?endpoint=$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL_PROJECT_NAME": "smartflo",
    "VERCEL_URL": "getsmartflo.com",
    "VERCEL_TOKEN_ISSUER": "https://token.vercel.app",
    "VERCEL_TOKEN_AUDIENCE": "smartflo"
  }
}